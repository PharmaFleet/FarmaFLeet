{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": { "maxDuration": 60 }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/v1/cron/auto-archive",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/v1/cron/cleanup-old-locations",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/v1/cron/auto-expire-stale",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/v1/cron/check-driver-shifts",
      "schedule": "0 * * * *"
    }
  ]
}
